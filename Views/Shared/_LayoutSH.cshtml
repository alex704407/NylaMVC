<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    

    <aside class="mr-auto position-fixed">
        <div class="border bg-dark border-dark mw-100 vh-100">
            <div class="col">
                <div class="text-center">
                   <p class="navbar-brand" style="font-size: 45px; font-family: 'Pacifico', cursive; color:ghostwhite;"><b>Nyla</b></p>
                    <hr style="background-color:grey"; />
                </div>
                <br />
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-warning">Courses</a>
                        <hr style="background-color:orangered" />
                    </li>
                    <li class="nav-item" style="padding-top:10px;">
                        <a class="nav-link text-warning">Enrolled Courses</a>
                        <hr style="background-color:orangered" />
                    </li>
                    <li class="nav-item" style="padding-top:10px;">
                        <a class="nav-link text-warning">Profile</a>
                        <hr style="background-color:orangered" />
                    </li>
                    <li class="nav-item" style="padding-top:10px;">
                        <a class="nav-link text-warning">Settings</a>
                        <hr style="background-color:orangered" />
                    </li>
                </ul>
            </div>
        </div>
    </aside>

    <nav class="container">
      
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                    </div>
                    <input class="form-control" placeholder="Search" type="text" role="search">
                    <br />
                </div> 
            </div> 
      
      
    </nav>

    <br /><br />

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
