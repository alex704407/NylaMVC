<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NylaMVC</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm" style="background-color:#74b1e3;">
            <!-- Brand/logo -->
            <a class="navbar-brand" style="color:#0371a8; font-size:45px; font-family: 'Pacifico', cursive;" href="#">Nyla</a>

            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" style="font-size:18px; font-family: 'Alata', sans-serif; padding-top:20px; padding-left:45px;" href="#">
                        Courses
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-size:18px; font-family: 'Alata', sans-serif; padding-top:20px; padding-left:45px; " href="#">
                        Tuition
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-size:18px; font-family: 'Alata', sans-serif; padding-top:20px; padding-left:45px;" href="#">
                        About Nyla
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-size:18px; font-family: 'Alata', sans-serif; padding-top:20px; padding-left:45px; " href="#">
                        Apply Now
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-size:18px; font-family: 'Alata', sans-serif; padding-top:20px; padding-left:45px;" href="#">
                        <span><i class="fab fa-twitter"></i></span>NylaFellowship
                    </a>
                </li>

            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item text-right">
                    <a class="nav-link" asp-action="SignIn" asp-controller="login" style="font-size:18px; font-family: 'Alata', sans-serif; padding-top:20px; padding-left:45px;">
                        Login&nbsp;<span><i class="fas fa-sign-in-alt"></i></span>
                    </a>
                </li>
            </ul>
        </nav>
    </header>
 
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - NylaMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
