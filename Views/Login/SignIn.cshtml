@model NylaMVC.ViewModels.SignInViewModel;
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 offset-3 float-md-center">
    <div class="card">
        <article class="card-body">
            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 offset-3 float-md-center">
                <h4 class="card-title text-center mb-4 mt-1">Sign In</h4>
                <hr>
                <p class="text-success text-center">Login to Start Learning</p>
                <br />
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Username" class="form-control" placeholder="Email" type="text">
                    <span asp-validation-for="Username" class="text-warning"></span>
                        <br />
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->

                <br /><br />

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input asp-for="Password" class="form-control" placeholder="********" type="password">
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <br /><br />

                <div style="margin:auto;">
                    <div class="row">
                        <a asp-action="SignUp" asp-controller="signup" class="nav-link">Sign Up Instead</a>
                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                        <input type="submit" value="Sign In" class="btn btn-outline-primary" />
                    </div>

                </div>

            </div>
        </article>
    </div>
</div>

